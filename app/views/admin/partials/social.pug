.form-group
	label.labelField=__("Socials")
	#social
		//
		- if (!data.social || !data.social.length) {
		-  data.social = []
		-  data.social.url = ""
		- }
		each item, i in data.social
			.mb-3
				.input-group
					input.form-control(type='text' name='social['+i+'][url]' placeholder=__("Socials") value=item.url)
					.input-group-append
						button.btn.btn-danger(type='button' onclick="$(this).parent().parent().parent().remove()")
							i.fa.fa-trash(data-toggle='tooltip' data-placement='top')
	button.mb-2.btn.btn-success.btn-sm.duplicator(type='button' data-duplicate="social")
		i.fa.fa-plus(data-toggle='tooltip' data-placement='top')
		!=" "
		b=__("ADD SOCIAL")

